/* index.wxss */
.scrollarea {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.container {
  flex: 1;
  padding: 0 0 400rpx 0;
  display: flex;
  flex-direction: column;
}


.avatar-title {
  display: flex;
  align-items: center;

}

.bot-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 10rpx;
}

.bot-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  background-color:transparent;
}

.chat-messages {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.message {
  margin-bottom: 30rpx;
  display: flex;
  max-width: 80%;
}

.bot-message {
  align-self: flex-start;
}

.user-message {
  align-self: flex-end;
  flex-direction: row;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  min-width: 80rpx;
  min-height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.message-avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.user-message .message-avatar {
  margin-right: 0;
  margin-left: 20rpx;
}

.message-content {
  background-color: #fff;
  transform: translateY(5rpx);
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
  white-space: pre-wrap;
}
.message-content2{
  white-space: pre-wrap;
  background-color: #fff;
  transform: translateY(30rpx);
  border-radius: 10rpx;
  font-size:30rpx;
  display: block; /* 确保元素可以占据整行，才能居中 */
  text-align: center;
  color: #333;
  line-height: 2.8;
  word-break: break-all;
  white-space: pre-wrap;
}
.user-message .message-content {
  background-color: #95ec69;
}

.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-top: 1rpx solid #e0e0e0;
}

.chat-input {
  flex: 1;
  height: 80rpx;
  background: #fff;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #07c160;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  padding: 0;
}

.send-icon {
  font-size: 40rpx;
}

.cursor {
  display: inline-block;
  animation: blink 0.7s infinite;
  font-weight: bold;
  color: #333;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}

/* 添加底部提示消息样式 */
.bot-hint-message {
  display: flex;
  align-items: flex-start;
  margin-top: 20rpx;
  opacity: 0.7;
}

.bot-hint-message .message-content {
  font-size: 26rpx;
  padding: 15rpx;
  background-color: #f0f0f0;
}

/* 添加思考中状态的样式 */
.thinking {
  display: flex;
  align-items: center;
}

.loading-dots {
  display: flex;
  margin-left: 5rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #999;
  margin: 0 3rpx;
  animation: dot-flashing 1s infinite alternate;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dot-flashing {
  0% {
    opacity: 0.3;
  }
  100% {
    opacity: 1;
  }
}

